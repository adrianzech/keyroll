{# templates/pages/host/index.html.twig #}
{% extends 'layouts/crud_layout.html.twig' %}
{% import 'components/page_header.html.twig' as page_header %}

{% set apply_background = false %}
{% set apply_content_padding = false %}

{% set page_title = 'entity.host.page_title.index' %}
{% block title %}{{ page_title|trans }} - {{ parent() }}{% endblock %}

{% block page_header %}
    {{ page_header.default(
        title=page_title,
        button_label='entity.host.action.add',
        button_path=path('app_host_new'),
        button_icon='bi:plus-lg'
    ) }}
{% endblock %}

{% block content %}
    {% data_table_theme hosts 'themes/data_table.html.twig' %}
    {{ data_table(hosts) }}
{% endblock %}
