{# templates/pages/host/_form.html.twig #}
{% import "components/button.html.twig" as button %}
{% set host = host ?? form.vars.data %}
{% set form_id = form.vars.id %}

{{ form_start(form, { attr: { id: form_id } }) }}

{{ form_row(form.name) }}
{{ form_row(form.hostname) }}

<div class="grid grid-cols-1 md:grid-cols-2 gap-4 [&>div]:mb-0 [&>div>div]:mb-0">
    {{ form_row(form.port) }}
    {{ form_row(form.username) }}
</div>


{{ form_rest(form) }}

{{ form_end(form, { render_rest: false }) }}

<div class="card-actions mt-6 flex flex-wrap items-center justify-between gap-4">
    <div>
        {% if host is not null and host.id is not null and is_granted('ROLE_ADMIN') %}
            {{ button.delete(
                label_key='common.button.delete',
                form_action_path=path('app_host_delete', { id: host.id }),
                csrf_token_value=csrf_token('delete'),
                confirm_message_key='entity.host.dialog.delete_confirm',
                confirm_params={'%name%': host.name},
                additional_classes='btn-outline btn-error'
            ) }}
        {% endif %}
    </div>
    <div class="flex flex-wrap gap-2 justify-end">
        {{ button.outline(label_key='common.button.cancel', path=path('app_host_index')) }}
        <button type="submit" form="{{ form_id }}" class="btn btn-primary">
            {{ 'common.button.save'|trans }}
        </button>
    </div>
</div>
