{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')|first }}" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ 'app.name'|trans }} - {{ 'app.tagline'|trans }}{% endblock %}</title>
    {% block stylesheets %}
        {{ importmap('app') }}
    {% endblock %}

    {% block javascript_theme_initial %}
        <script src="{{ asset('theme-initial.js') }}"></script>
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body class="bg-base-200 min-h-screen flex flex-col">
<header class="bg-base-100 shadow-md sticky top-0 z-50">
    {% block header_navigation %}
        {% include 'partials/_header.html.twig' %}
    {% endblock %}
</header>

<main class="flex-grow container mx-auto p-4">
    {% block flash_messages %}
        {% include 'components/_flash_messages.html.twig' %}
    {% endblock %}

    {% block body %}{% endblock %}
</main>
</body>
</html>
