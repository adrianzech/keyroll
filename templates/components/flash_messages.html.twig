{# templates/components/FlashMessages.html.twig #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        {% if label == 'success' %}
            <div class="alert alert-success shadow-lg mb-4">
                <div class="flex items-center">
                    {{ ux_icon('bi:check-circle', { class: 'flex-shrink-0 h-6 w-6 mr-2' }) }}
                    <span>{{ message|trans }}</span>
                </div>
            </div>
        {% elseif label == 'error' %}
            <div class="alert alert-error shadow-lg mb-4">
                <div class="flex items-center">
                    {{ ux_icon('bi:x-circle', { class: 'flex-shrink-0 h-6 w-6 mr-2' }) }}
                    <span>{{ message|trans }}</span>
                </div>
            </div>
        {% elseif label == 'warning' %}
            <div class="alert alert-warning shadow-lg mb-4">
                <div class="flex items-center">
                    {{ ux_icon('bi:exclamation-triangle', { class: 'flex-shrink-0 h-6 w-6 mr-2' }) }}
                    <span>{{ message|trans }}</span>
                </div>
            </div>
        {% elseif label == 'info' %}
            <div class="alert alert-info shadow-lg mb-4">
                <div class="flex items-center">
                    {{ ux_icon('bi:info-circle', { class: 'flex-shrink-0 h-6 w-6 mr-2' }) }}
                    <span>{{ message|trans }}</span>
                </div>
            </div>
        {% endif %}
    {% endfor %}
{% endfor %}
